type User {
  id: ID! @id
  username: String! @unique
  email: String! @unique
  firstName: String! @default(value: "")
  lastName: String!
  bio: String!
  followers: [User!]! @relation(name: "FollowRelation")
  following: [User!]! @relation(name: "FollowRelation")
  posts: [Post!]!
  likes: [Like!]!
  comments: [Comment!]
  loginSecret: String!
}

type Post {
  id: ID! @id
  location: String!
  caption: String!
  user: User!
  store: Store
  catagory: String
  foods: [Food!]!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like {
  id: ID! @id
  user: User!
  post: Post!
}

type Comment {
  id: ID! @id
  text: String!
  user: User!
  post: Post!
}

type File {
  id: ID! @id
  url: String!
  post: Post!
}

type Food {
  id: ID! @id
  foodName: String!
  catagory: String
  url: String!
  post: Post!
}

type Store {
  id: ID! @id
  storeName: String!
  catagory: String
  owner: User
  location: String
}
